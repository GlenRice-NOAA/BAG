CFLAGS = -g -O -Wall -ansi

LIBS = -lm

geotrans_reuse_lib.a: $(OBJFILES)
	ar -rv $@ $?
	rm -f *.o

$(OBJFILES): $(CFILES)
	cc $(CFLAGS) -c $(INCLUDES) $(LIBS) $?

clean:
	rm -f *.a *.o
